shift + alt + Return
	$TERMINAL

super + s
	$TERMINAL -e ncspot

super + r ; {h,d,p,w,l,P}
	$TERMINAL -e ranger $HOME/{.,docs,docs/papers,docs/wiki,lectures,proj}

super + q
	$TERMINAL -e nvim $HOME/docs/zk/scratchpad.md

super + t
  dmenu_todoist.sh

super + o
  obsidian

super + n
	$TERMINAL -e neomutt

super + h
	$TERMINAL -e htop

super + m
	pavucontrol

super + e ; {e,d}
	$TERMINAL -e trans {en:de,de:en}

shift + alt + t
	dmenu_tmux.sh

shift + alt + p
	/usr/bin/passmenu -l 5 -fn "Monospace:size=16"

shift + alt + n
	/usr/bin/networkmanager_dmenu

shift + alt + m
	dmenu_man.sh

shift + alt + e
	dmenu_emoji.sh

super + c
  dmenu_clip.sh

super + p
	dmenu_file_launcher.sh

super + g
	dmenu_search.sh

super + a
  dmenu_arandr.sh

XF86Audio{Raise,Lower}Volume
	pamixer --allow-boost {-i,-d} 5 && \
	notify_volume.sh

super + {Up,Down}
	pamixer --allow-boost {-i,-d} 5 && \
	notify_volume.sh

super + {Left,Right}
	playerctl {previous,next} && \
	notify_track.sh

super + space
	playerctl play-pause && \
	notify_track.sh

super + Return
  playerctl -a pause

XF86AudioMute
	pamixer --toggle-mute && \
	notify_volume.sh

XF86MonBrightnessUp
  brightnessctl s 10+ && \
  notify_brightness.sh

XF86MonBrightnessDown
  brightnessctl s 10- && \
  notify_brightness.sh
