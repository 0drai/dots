[color]
  ui = true

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[merge]
  tool = "flatpak run org.gnome.meld"

[diff]
	tool = "flatpak run org.gnome.meld"

[mergetool "meld"]
  useAutoMerge = auto

[pull]
	ff = only

[init]
	defaultBranch = main

[alias]
  dt = "! args=$@; shift $#; nvim -c \"DiffviewOpen $args\""

